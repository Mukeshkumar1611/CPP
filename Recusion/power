// Power 

#include <iostream>
using namespace std;

int power(int x, int n)
{
    if (n == 0)
    {
        return 1;
    }
    return x * power(x, n - 1);
}

int main()
{
    int x;
    cout << "Enter x : ";
    cin >> x;

    int n;
    cout << "Enter n : ";
    cin >> n;

    cout << "Ans : " << power(x, n) << endl;

    return 0;
}
