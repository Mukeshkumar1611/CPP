#include <iostream>
using namespace std;
int main()
{
    int n;
    cout << "Enter size : ";
    cin >> n;
    int *arr = new int[5];
    cout << "Enter elements : ";
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    int i = 0;

    while (i < n - 1)
    {
        arr[i] = arr[i + 1];
        i++;
    }
    n = n - 1;
    cout <<"Updated array : ";
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    return 0;
}
