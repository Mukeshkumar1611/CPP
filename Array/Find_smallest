// Write a Programe in cpp To find smallest in an array

#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter Size: " << endl;
    cin >> n;
    int arr[n];
    cout << "Enter Elements: " << endl;
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    for (int i = 1; i < n; i++)
    {
        if (arr[0] > arr[i])
        {
            arr[0] = arr[i];
        }
    }
    cout << "Smallest Element in Array is: " << arr[0] << endl;
    return 0;
}
