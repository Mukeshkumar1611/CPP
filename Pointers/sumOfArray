//  6.Write a program in C++ to compute the sum of all elements in an array using pointers

#include <iostream>
using namespace std;
int main()
{
    int arr[5] = {1, 2, 3, 4, 5};
    int sum = 0;
    int *ptr_sum = &sum;

    for (int i = 0; i < 5; i++)
    {
        *ptr_sum = *ptr_sum + arr[i];
    }

    cout << *ptr_sum;
    return 0;
}
