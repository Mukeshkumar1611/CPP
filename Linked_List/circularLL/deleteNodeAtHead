#include <iostream>
using namespace std;

class Node
{
public:
    int data;
    Node *next;
};

void deleteAtHead(Node *&head)
{
    if (head == NULL)
    {
        cout << "Head cannot be NULL" << endl;
        return;
    }
    Node *currNode = head;
    while (currNode->next != head)
    {
        currNode = currNode->next;
    }
    Node *toDelete = head;
    currNode->next = head->next;
    head = head->next;
    delete toDelete;
}

void printList(Node *&head)
{
    Node *currNode = head;
    do
    {
        cout << currNode->data << " ";
        currNode = currNode->next;
    } while (currNode != head);
}

int main()
{
    Node *head = new Node();
    Node *second = new Node();
    Node *third = new Node();

    head->data = 1;
    head->next = second;

    second->data = 2;
    second->next = third;

    third->data = 3;
    third->next = head;

    printList(head);

    cout << endl;
    deleteAtHead(head);
    cout << endl;
    printList(head);

    return 0;
}
