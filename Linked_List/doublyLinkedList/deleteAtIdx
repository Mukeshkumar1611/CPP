
#include <iostream>
using namespace std;

class Node
{
public:
    int data;
    Node *next;
    Node *previous;
};

void deleteAtHead(Node *&head)
{
    if (head == NULL)
    {
        cout << "Empty";
        return;
    }
    Node *toDelete = head;
    head = head->next;
    head->next->previous = NULL;
    delete toDelete;
}

void deleteLastNode(Node *&head)
{
    Node *currNode = head;
    while (currNode->next->next != NULL)
    {
        currNode = currNode->next;
    }
    Node *todelete = currNode->next;
    currNode->next = NULL;
    delete todelete;
}

void deleteAtIdx(Node *&head, int idx)
{
    if (idx == 0)
    {
        deleteAtHead(head);
        return;
    }
    // if(idx == size - 1){deleteLastNode(head); return;}

    Node *currNode = head;
    for (int i = 0; i < idx - 1; i++)
    {
        currNode = currNode->next;
    }
    Node *toDelete = currNode->next;
    currNode->next = currNode->next->next;
    currNode->next->previous = currNode->next->previous->previous;
    delete toDelete;
}

void printList(Node *head)
{
    while (head != NULL)
    {
        cout << head->data << " ";
        head = head->next;
    }
}

int main()
{
    Node *head = new Node();
    Node *second = new Node();
    Node *third = new Node();

    head->previous = NULL;
    head->data = 1;
    head->next = second;

    second->previous = head;
    second->data = 2;
    second->next = third;

    third->previous = second;
    third->data = 3;
    third->next = NULL;

    printList(head);
    cout << endl;
    deleteAtIdx(head, 1);
    cout << "After Deleting node : ";
    printList(head);

    return 0;
}
